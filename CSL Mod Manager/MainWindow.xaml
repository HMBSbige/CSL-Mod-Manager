<Window x:Class="CSL_Mod_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSL_Mod_Manager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Select Directonary" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="100" Click="BtnSelectDir"/>
        <Button Content="Refresh Table" HorizontalAlignment="Left" Margin="195,10,0,0" VerticalAlignment="Top" Width="75" Click="BtnRefreshTable"/>
        <Button Content="Download Content and analyse" HorizontalAlignment="Left" Margin="275,10,0,0" VerticalAlignment="Top" Width="177" Click="BtnDownloadandAnalyse"/>
        <DataGrid x:Name="DataGridView1" HorizontalAlignment="Left" Height="374" Margin="10,35,0,0" VerticalAlignment="Top" Width="442" IsReadOnly="True" SelectionChanged="DataGridView1_SelectionChanged"/>
        <Image x:Name="Preview" HorizontalAlignment="Left" Height="399" Margin="457,10,0,0" VerticalAlignment="Top" Width="325"/>

    </Grid>
</Window>
